    <link href="lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    @*Bundle CSS files*@
    <link href="css/bundle.min.css" rel="stylesheet" />
    @*Component CSS files*@
    <link href="Ecoplaza.styles.css" rel="stylesheet" />

</head>
<body class="page">
    @RenderBody()
