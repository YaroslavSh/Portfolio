    <script src="lib/bootstrap/js/bootstrap.bundle.min.js" async></script>

    <!-- Template Main JS File -->
    <script src="js/bundle.min.js" defer></script>
    @*<script src="js/test.js"></script>*@
    <script src="_framework/blazor.server.js" async></script>
    <script src="lib/swiper/swiper-bundle.min.js" defer></script>
    @*Lib Icons CSS Files*@
    <link rel="preload" href="lib/fontawesome-free/css/all.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <link rel="preload" href="lib/bootstrap-icons/bootstrap-icons.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <link rel="preload" href="lib/boxicons/css/boxicons.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <link rel="preload" href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" as="style" onload="this.onload=null;this.rel='stylesheet'">
