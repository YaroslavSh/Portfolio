@using Microsoft.AspNetCore.Components.Web
@using Ecoplaza.Data
@namespace Ecoplaza.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject SubdomainService SubdomainService

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="all">
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
    <meta name="copyright" content="@(SubdomainService.IsSubdomain ? CitiesService.Get("toponyms.nom").ToLower() + "." : "")@ContactDataClass.URLshort(), @ContactDataClass.CopyrightYears(). Все права защищены." />
    <base href="~/" />
    @*Favicons*@
    <link href="img/favicon.svg" rel="icon">
    <link href="img/favicon.svg" rel="apple-touch-icon">
    @*Google Fonts*@
    @*<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">*@
